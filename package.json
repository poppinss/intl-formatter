{
  "name": "@poppinss/intl-formatter",
  "version": "3.0.0-4",
  "description": "Memoized API for Intl (To be used within Node)",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/src",
    "build/index.d.ts",
    "build/index.js"
  ],
  "exports": {
    ".": "./build/index.js"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "prebenchmark": "npm run build",
    "benchmark": "node build/benchmarks/date.js && node build/benchmarks/number.js && node build/benchmarks/plural.js && node build/benchmarks/relative.js && node build/benchmarks/list.js && node build/benchmarks/display_names.js",
    "pretest": "npm run lint",
    "test": "c8 npm run vscode:test",
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "release": "np",
    "version": "npm run build",
    "format": "prettier --write .",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "sync-labels": "github-label-sync --labels .github/labels.json poppinss/intl-formatter",
    "vscode:test": "node --loader=ts-node/esm bin/test.ts"
  },
  "keywords": [
    "intl",
    "formatjs"
  ],
  "author": "virk,poppinss",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/tsconfig": "^1.1.8",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@japa/assert": "^2.0.0",
    "@japa/runner": "^3.0.1",
    "@swc/core": "1.3.82",
    "@types/node": "^20.8.6",
    "benchmark": "^2.1.4",
    "c8": "^8.0.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "np": "^8.0.4",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "moize": "^6.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poppinss/intl-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/poppinss/intl-formatter/issues"
  },
  "homepage": "https://github.com/poppinss/intl-formatter#readme",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config"
}
